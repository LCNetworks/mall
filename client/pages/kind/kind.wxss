/* pages/kind/kind.wxss */
.body{
  flex-direction: column;
}

.top {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.menuContainer{
  width: 100%;
  z-index: 500;
  position:absolute; 
}

.menu{
  width: 20%;
  float: left;
  background: white;
}

.menu-img{
  width:25px;
  height:25px;
  margin-left: 5px;
}

.main{
  width: 80%;
  height: auto;
  float: right;
  background:rgba(105,195,140,1);
}
.item{
  text-align: center;
}
.item-active{
  background:rgba(105,195,140,1);
  text-align: center
}

.main .item{
  margin-left:10px;
  width: 60px;
  float: left
}
.menu .item{
  border-right:1px #ccc solid;
}

.search-view{
  position:relative;
  left:0;
  right:0;
  top:0;
  z-index:500;
  width: 100%;
  height: 100rpx;
  background:rgba(105,195,170,1);
  display: flex;
  vertical-align: middle
}
.serarch-content{
   background: white;
   width:650rpx;
   display: flex;
   flex-direction: row;
   align-items: center;
   padding-top: auto;
   padding-left: 20rpx;
   padding-bottom: auto;
   margin: auto;
   height: 70rpx;
   border-radius:5px 5px;
   margin-left: 5px;
}
.search-icon{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.search-input{
  width: 500rpx;
  font-size: 28rpx;
}
.search-btn{
  width: 150rpx;
  height: 70rpx;
  margin-right: 0rpx;
  background-color:blueviolet;
  font-size: 28rpx;
  align-items: center;
  border-top-left-radius: 0rpx;
  border-bottom-left-radius: 0rpx;
  color:#fff;
  border:none;
  position: relative;
}

.contain-item-left{
  float: left;
  width:50%;
  margin: 0 auto;
  text-align: center
}
.contain-item-right{
  float:right;
  width:48%;
  margin: 0 auto;
  text-align: center
}

.items-title{
  margin-left:2%;
  font-size:12px;
  vertical-align: middle
}

.item-img{
  width:90%;
  height:100px;
}
.item-text{
  display: inline-block;
  vertical-align: middle;
  font-size:13px;
}